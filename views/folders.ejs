<html>
    <head>
        <title>

        </title>
        <style>
            .logo {
                display: flex;
                gap: 1rem;
                align-items: center;
                position: fixed;
                top: 0;
                left: 0;
                opacity: 0.8;

                transform: translate(10%, -10%);
            }

            .logo h2 {
                font-size: 3rem;
            }

            body {
                height: 100vh;
                overflow: hidden;
            }

            .main {
                width: 100%;
                height: 100%;
                display: flex;
                justify-content: center;
                align-items: center;
            }

            .folders-container {

                display: flex;
                flex-direction: column;
                position: relative;
                width: 60%;
                justify-content: center;
                gap: 2rem;
                padding: 4rem;
                margin: 2rem;
                border: 1px solid #ccc;
                border-radius: 1rem;
                box-shadow: 2px 2px 2px rgba(0, 0, 0, 0.5);

                margin-top: -200px;

            }

            .folders {
                display: flex;
                justify-content: left;
                gap: 4rem;
                flex-wrap: wrap;
            }

            .add-folder {

                position: absolute;
                top: 0;
                left: 0;
                transform: translate(10%, -70%);
                font-size: 2rem;
                display: flex;
                align-items: center;
                gap: 1rem;

            }

            .folder a {
                text-decoration: none;
                color: black;
                display: flex;
                flex-direction: column;
                align-items: center;
            }

            .folder .delete {

                position: absolute;

            }

            .folder .delete {

                position: absolute;
                top: 20%;
                transition: scale 0.3s;

            }

            .folder .edit {
                position: absolute;
                top: 20%;
                transition: scale 0.3s;
                transform: translateX(200%);
            }

            .folder .delete:hover,
            .folder .edit:hover {

                scale: 1.1;

            }

            .folder img {

                transition: scale 0.3s;

            }

            .folder img:hover {

                scale: 1.1;

            }

            .back {
                position: absolute;
                bottom: 0;
                transform: translateY(125%);
            }

        </style>
    </head>
    <body>
        
        <div class="logo">
            <h2>File Dookie </h2>
            <img src="/assets/icon.png" height="50px" width="50px" alt="">
        </div>

        <div class="main">

            <div class="folders-container">
                <div class="add-folder">
                    <h3>Folders</h3>
                    <a href="/folders/create"><img src="/assets/add_circle.svg" height="32px" width="32px" alt=""></a>
                </div>
                <div class="folders">
                    <% if(folders.length > 0){ %>
                        <% folders.forEach((folder) => { %>
                            <div class="folder">
                                <a href="/folders/<%= folder.id %>">
                                    <img src="/assets/folder.svg" height="80px" width="80px" alt="">
                                    <%= folder.name %>
                                </a>
                            <div class="delete"><a href="/folders/<%= folder.id %>/delete"><img src="/assets/delete.svg" height="24px" width="24px" alt=""></a></div>
                            <div class="edit"><a href="/folders/<%= folder.id %>/edit"><img src="/assets/edit.svg" height="24px" width="24px" alt=""></a></div>
                        </div>
                        <% }) %>
                    <% } else { %>
                        <h3>No folders to display</h3>
                    <% }%>
                </div>
            <div class="back"><a href="/">Back</a></div>

            </div>

        </div>


    </body>
</html>